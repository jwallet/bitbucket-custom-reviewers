{
  "manifest_version": 2,
  "name": "Bitbucket Custom Default Reviewers",
  "description": "Chrome/Firefox extension that lets the user set his own default pull request reviewers.",
  "version": "1.0.0",
  "author": "jwallet",
  "homepage_url": "https://github.com/jwallet/bitbucket-custom-default-reviewers",
  "icons": {
    "16": "icons/icon_16px.png",
    "32": "icons/icon_32px.png",
    "48": "icons/icon_48px.png",
    "64": "icons/icon_64px.png",
    "128": "icons/icon_128px.png",
    "256": "icons/icon_256px.png"
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon_16px.png",
      "32": "icons/icon_32px.png"
    },
    "show_matches": ["https://bitbucket.org/*", "https://*.bitbucket.org/*"],
    "default_title": "Bitbucket Custom Default Reviewers"
  },
  "applications": {
    "gecko": {
      "id": "jwallet@bitbucket-custom-default-reviewers.com"
    }
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://bitbucket.org/*",
    "https://api.bitbucket.org/*",
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "main.js"
      ],
      "matches": ["https://bitbucket.org/*", "https://*.bitbucket.org/*"]
    }
  ],
  "background": {
    "scripts": [
      "background.js",
      "background-for-requests.js"
    ],
    "persistent": false
  }
}
